{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/pages/trick-show/trick-show.css') }}"/>
    <script src="{{ asset('assets/js/trick/trick-show.js') }}"></script>
{% endblock %}

{% block title %}Trick {{ trick.name }}{% endblock %}


{% block body %}
<section class="container">
    <div class="col-md-9 m-auto p-5">
        {% for flash_message in app.flashes('success') %}
            <div class="alert alert-success mb-4">{{ flash_message }}</div>
        {% endfor %}
        <div class="banner d-flex justify-content-center align-items-center position-relative">
            <img class="card-img-top img-fluid rounded w-100" src="{{ asset('assets/uploads/' ~ trick.pictures.first.url) }}">
            <div class="overlay-text display-1 position-absolute text-light">{{ trick.name }}</div>
            {% if trick.user == user %}
                <div class="position-absolute top-0 end-0 p-3">
                    <a href="{{ path('app_trick_edit', { 'slug': trick.slug }) }}" class="text-primary"><i class="bi bi-lg bi-pencil mx-2"></i></a>
                    <a class="cursor-pointer" data-bs-toggle="modal" data-bs-target="#deleteTrickModal"><i class="bi bi-lg bi-trash text-danger"></i></a>
                </div>
            {% endif %}
        </div>
        <!-- Modal to delete the trick-->
        <div class="modal fade" id="deleteTrickModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="deleteTrickModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="deleteTrickModalLabel">Delete the trick ?</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary text-white" data-bs-dismiss="modal">Cancel</button>
                        <form id="deleteTrickForm" method="post" action="{{ path('app_trick_delete', {slug: trick.slug}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.slug) }}">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row p-4">
        {% for picture in trick.pictures %}
            <div class="col-md-2 p-2">
                <img src="{{ asset('assets/uploads/' ~ picture.url) }}" class="img-fluid rounded cursor-pointer" data-bs-toggle="modal" data-bs-target="#pictureModal" data-url="{{ asset('assets/uploads/' ~ picture.url) }}">
            </div>
        {% endfor %}

        <!-- Single Modal for all pictures (to show on per one)-->
        <div class="modal fade" id="pictureModal" tabindex="-1" aria-labelledby="pictureModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content bg-primary">
                    <div class="modal-body m-auto">
                        <img id="modalImage" src="" class="img-fluid rounded">
                    </div>
                </div>
            </div>
        </div>

            {% for video in trick.videos %}
                <div class="col-md-2 p-2">
                    <div class="video-container">
                        <iframe class="rounded" width="100%" height="100%" src="https://www.youtube.com/embed/{{ video.url }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
                    </div>
                </div>
            {% endfor %}
        </div>
        <h2 class="mt-4 text-light">Description</h2>
        <div class="text-light my-5">
            {{ trick.description }}
        </div>
        <div class="row col-md-10 mx-auto y-5 border-bottom border-light py-5 g-3">
            <div class="col-12 col-md-4">
                <div class="d-flex flex-column border border-light rounded p-2 text-center bg-primary-dark">
                    <div class="text-light small">Created at</div>
                    <div class="text-light">{{ trick.createdAt|date('d/m/Y H:i') }}</div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="d-flex flex-column border border-light rounded p-2 text-center bg-primary-dark">
                    <div class="text-light small">Category</div>
                    <div class="text-light">{{ trick.category.name }}</div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="d-flex flex-column border border-light rounded p-2 text-center bg-primary-dark">
                {% if trick.updatedAt is not null %}
                    <div class="text-light small">Edited at</div>
                    <div class="text-light">{{ trick.updatedAt|date('d/m/Y H:i') }}</div>
                {% else %}
                    <div class="text-light small">Edited at</div>
                    <div class="text-light">/</div>
                {% endif %}
                </div>
            </div>
        </div>
        <div class="col-md-10 mx-auto py-5 border-bottom border-light text-center">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <h2 class="text-light">Add a comment</h2>
                {{ form_start(form) }}
                <div class="d-flex flex-column gap-3 col-md-10 m-auto">
                        {{ form_widget(form.text, 
                            {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }) 
                        }}
                    <button type="submit" class="btn btn-light w-50 m-auto">Submit</button>
                </div>
                {{ form_end(form) }}
            {% else %}
                <div class="text-light">
                    <a class="text-light" href='/login'>Login</a> to post a comment.
                </div>
            {% endif %}
        </div>
        <div class="col-md-10 mx-auto my-5 d-flex flex-column gap-3" id="comment-container">
            {% for commentMain in commentMains %}
            <div class="row align-items-center comment d-none">
                <div class="col-2 d-flex flex-column align-items-center gap-2">
                    <img class="avatar rounded-circle" src="{{ asset('assets/avatar/' ~ commentMain.user.avatar) }}">
                </div>
                <div class="comment-text d-flex flex-column col-10 border border-light rounded p-3">
                    <div class="text-light">{{ commentMain.user.username }}</div>
                    <div class="small mb-3 date">{{ commentMain.createdAt | date('F j, Y \a\t h:i A') }}</div>
                    <div id={{ commentMain.id }} class="text-light">{{ commentMain.text }}</div>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') and commentMain.user == app.user %}
                        <div class="d-flex justify-content-end text-white">
                            <div class="cursor-pointer" data-bs-toggle='modal' data-bs-target='#editCommentMainModal' data-id="{{ commentMain.id }}" data-url="{{ path('app_trick_edit_comment_main', {slug: trick.slug, id: commentMain.id}) }}" data-token="{{ csrf_token('edit-comment-main' ~ commentMain.id) }}"><i class="bi bi-lg bi-pencil mx-2"></i></div>
                            <div class="cursor-pointer" data-bs-toggle="modal" data-bs-target="#deleteCommentMainModal"  data-url="{{ path('app_trick_delete_comment_main', {slug: trick.slug, id: commentMain.id}) }}"  data-trick-slug="{{ trick.slug }}" data-comment-main-id="{{ commentMain.id }}" data-token="{{ csrf_token('delete-comment-main' ~ commentMain.id) }}"><i class="bi bi-lg bi-trash"></i></div>
                        </div>
                    {% endif %}
                </div>
            </div>
            {% endfor %}

            <!-- Single modal to edit a CommentMain -->
            <div class="modal fade" id="editCommentMainModal" tabindex="-1" aria-labelledby="editCommentMainModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="editCommentMainModalLabel">Edit comment</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="editCommentMainForm" method="post">
                                <div class="mb-3">
                                    <label for="edit-comment-main-text" class="col-form-label">Edit your comment :</label>
                                    <input type="text" class="form-control" id="edit-comment-main-text" name="text">
                                </div>
                                <input type="hidden" name="_token" value="">
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary text-white" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary" form="editCommentMainForm">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Single Modal to delete a CommentMain-->
            <div class="modal fade" id="deleteCommentMainModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="deleteCommentMainModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5 text-dark" id="deleteCommentMainModalLabel">Delete the comment ?</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary text-white" data-bs-dismiss="modal">Cancel</button>
                            <form id="deleteCommentMainForm" method="post" action="">
                                <input type="hidden" name="_token" value="">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary w-25 m-auto" id="load-more">
                Load more comments
            </button>
        </div>

    </div>
</section>
{% endblock %}
