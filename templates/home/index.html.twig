{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/home.css') }}"/>
{% endblock %}

{% block body %}

    <!-- Header-->
    <header class="bg-dark py-5">
        <div class="container px-5 position-relative">
            <div class="row gx-5 align-items-center justify-content-center">
                <div class="col-lg-8 col-xl-7 col-xxl-6">
                    <div class="my-5 text-center text-xl-start">
                        <h1 class="display-3 fw-bolder text-white mb-2">
                            Learn, share, and ride !
                        </h1>
                        <p class="lead fw-normal text-white-50 mb-4">
                            Our collaborative site allows you to discover, learn, and master snowboard tricks. Join an active community of riders, share your knowledge, and benefit from the experience of others to progress quickly.
                        </p>
                    </div>
                </div>
                <div class="col-xl-5 col-xxl-6 d-none d-xl-block text-center">
                    <img class="img-fluid rounded-3 my-5" src="{{ asset('assets/uploads/snowboard1.png') }}">
                </div>
            </div>
            <div class="d-flex justify-content-md-end ">
                <a href="#tricks" class="btn btn-outline-light">
                    <i class="bi bi-arrow-down"></i>
                </a>
            </div>
        </div>
    </header>

    <!-- Features section-->
    <section class="py-5" id="tricks">
        <div class="container px-5 my-5">
            <div class="row gx-5">
                <div class="col-lg-12">
                    <div class="row gx-4 row-cols-1 row-cols-md-3 row-cols-lg-5">
                    {% for trick in tricks %}
                        <div class="col mb-5 tricks">
                            <div class="card h-100 d-flex flex-column p-0 shadow-sm">
                                <img class="card-img-top img-fluid rounded-top" src="{{ asset('assets/uploads/' ~ trick.pictures.first.url) }}">
                                <div class="card-body d-flex justify-content-between px-3">
                                    <h2 class="card-title h5"><a class="text-decoration-none text-dark" href="{{ path('app_trick_show', { 'id': trick.id }) }}">{{ trick.name }}</a></h2>
                                    <div>
                                        <i class="bi bi-lg bi-pencil mx-2"></i>
                                        <i class="bi bi-lg bi-trash"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-md-end ">
                <a href="#tricks" class="btn btn-outline-dark">
                    <i class="bi bi-arrow-up"></i>
                </a>
            </div>
        </div>
    </section>

{% endblock body %}