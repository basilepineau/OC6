{# templates/security/forgot_password.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Forgot Password{% endblock %}

{% block body %}
    <div class="container col-12 col-lg-6 py-5">
        <h1 class="text-center text-light">Forgout your password ?</h1>
        <div class="text-center text-light">We will send you a link to reset it.</div>

        {{ form_start(forgotPasswordForm, {'attr': {'class': 'col-10 col-lg-9 border border px-2 py-4 rounded mt-4 shadow m-auto'}}) }}
            <div class="col-10 col-lg-8 m-auto d-flex flex-column gap-4">
                {% for flashMessage in app.flashes('success') %}
                    <div class="alert alert-success mb-4">{{ flashMessage }}</div>
                {% endfor %}
                {% for flashMessage in app.flashes('danger') %}
                    <div class="alert alert-danger mb-4">{{ flashMessage }}</div>
                {% endfor %}

                <div class="form-group">
                    <div class="mb-2 text-light">
                        {{ form_label(forgotPasswordForm.username, 'Username') }}
                    </div>
                {{ form_widget(forgotPasswordForm.username, {
                    'attr': {
                        'class': 'form-control',
                    }
                }) 
                }}
                </div>

                <div class="text-center mt-3">
                    <button class="col-9 btn btn-primary-darker text-light" type="submit">Reset password</button>
                </div>
                <div class="d-flex flex-column align-items-center">
                    <a class="text-light fw-light text-center" href="{{ path('app_login') }}">Back to Sign in</a>
                </div>
            </div>
        {{ form_end(forgotPasswordForm) }}
    </div>
{% endblock %}
