{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="container col-12 col-lg-6 py-5">
        <h1 class="text-center text-light mb-4">Reset your password</h1>

        {{ form_start(resetPasswordForm) }}

        <div class="col-10 col-lg-9 border border px-2 py-4 rounded mt-4 shadow m-auto">
            <div class="col-10 col-lg-8 m-auto d-flex flex-column gap-4">
                <div class="form-group">
                    <div class="mb-2 text-light">
                        {{ form_label(resetPasswordForm.plainPassword.first, 'New password') }}
                    </div>
                    {{ form_widget(resetPasswordForm.plainPassword.first, {
                        'attr': {
                            'class': 'form-control',
                            'autofocus': true
                        }
                    }) }}
                    {{ form_errors(resetPasswordForm.plainPassword.first) }}
                </div>
                <div class="form-group">
                    <div class="mb-2 text-light">
                        {{ form_label(resetPasswordForm.plainPassword.second, 'Confirm password') }}
                    </div>
                    {{ form_widget(resetPasswordForm.plainPassword.second, {
                        'attr': {
                            'class': 'form-control',
                        }
                    }) }}
                    {{ form_errors(resetPasswordForm.plainPassword.second) }}
                </div>
                <div class="text-center mt-3">
                    <button type="submit" class="col-10 col-lg-8 btn btn-primary-darker text-light">Reset password</button>
                </div>
            </div>
        </div>
        {{ form_end(resetPasswordForm) }}
    </div>
{% endblock %}

